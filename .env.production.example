# Database Configuration
DB_USER=postgres
DB_PASSWORD=your_secure_password_here
DB_NAME=newsapp_production

# Rails Secret Key (generate with: openssl rand -hex 64)
SECRET_KEY_BASE=your_secret_key_base_here

# Frontend API URL (your EC2 public IP or domain)
NEXT_PUBLIC_API_URL=http://your-ec2-ip-or-domain/api

# Google OAuth (optional, if you use OAuth)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# AWS Region (if needed)
AWS_REGION=ap-northeast-1
